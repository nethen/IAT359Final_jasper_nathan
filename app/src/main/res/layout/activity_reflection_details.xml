<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dip"
    android:paddingTop="32dip"
    android:paddingRight="16dip"
    android:paddingBottom="32dip"
    tools:context=".ReflectionDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reflectionDetailsTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="@dimen/text_lg" />

            <TextView
                android:id="@+id/notesDetailsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notesDetailsText"
                android:textColor="@color/black"
                android:textSize="@dimen/text_sm" />

            <TextView
                android:id="@+id/reflectionDetailsContentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No content found"
                android:textColor="@color/black"
                android:textSize="@dimen/text_base" />

            <EditText
                android:id="@+id/reflectionDetailsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_base" />

            <Button
                android:id="@+id/editReflectionContentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editReflectionButtonText" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>