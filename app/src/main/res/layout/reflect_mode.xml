<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ReflectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16sp"
        android:layout_marginVertical="32sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reflect_backReadings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:text="\u2190 My readings"
            android:textColor="@color/white"
            android:textSize="@dimen/text_lg" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/reflect_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let the mind wander"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_lg" />

        <TextView
            android:id="@+id/reflect_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XX"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="128dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/group_reflect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/reflect_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24sp"
                android:alpha="0.7"
                android:text="Flip your device face down and take a minute to gather your thoughts."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_sm" />

            <Button
                android:id="@+id/button_reflect_start"
                style="@style/ButtonDarkPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Start reflecting"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>