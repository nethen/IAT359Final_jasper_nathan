<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_archive"
    app:startDestination="@id/archiveFragment">

    <fragment
        android:id="@+id/archiveFragment"
        android:name="com.example.arcanamini.ArchiveFragment"
        android:label="fragment_archive"
        tools:layout="@layout/fragment_archive">
        <action
            android:id="@+id/action_archiveFragment_to_fragment_archive_recycler"
            app:destination="@id/fragment_archive_recycler"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_archiveFragment_to_activity_main"
            app:destination="@id/activity_main" />
    </fragment>
    <fragment
        android:id="@+id/fragment_archive_recycler"
        android:name="com.example.arcanamini.ArchiveRecyclerFragment"
        android:label="fragment_archive_recycler"
        tools:layout="@layout/fragment_archive_recycler" >
        <action
            android:id="@+id/action_fragment_archive_recycler_to_reflectionDetailsFragment"
            app:destination="@id/reflectionDetailsFragment" />
    </fragment>
    <activity
        android:id="@+id/activity_main"
        android:name="com.example.arcanamini.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/activity_librarium2"
        android:name="com.example.arcanamini.LibrariumActivity2"
        android:label="activity_librarium2"
        tools:layout="@layout/activity_librarium2" />
    <fragment
        android:id="@+id/reflectionDetailsFragment"
        android:name="com.example.arcanamini.ReflectionDetailsFragment"
        android:label="fragment_reflection_details"
        tools:layout="@layout/fragment_reflection_details" />
</navigation>